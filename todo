padding: 8px;
}

.timeline-item {
padding: 6px 10px;
margin-bottom: 4px;
cursor: pointer;
border-radius: 4px;
}

.timeline-item:hover {
background: #e5e7eb;
}

this.renderTimeline();
renderTimeline() {
const container = document.getElementById('timeline');
container.innerHTML = '';

this.pointHistory.forEach((snap, i) => {
const div = document.createElement('div');
div.className = 'timeline-item';
div.textContent =
`Punto ${snap.pointNumber} â€“ ` +
`A ${snap.score.A} | ${snap.score.B} B`;

div.onclick = () => {
this.restoreFromSnapshot(snap);
};

container.appendChild(div);
});
}